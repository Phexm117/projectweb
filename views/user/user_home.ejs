<script>
function filterPets() {
  const type = document.getElementById('typeFilter').value;
  const gender = document.getElementById('genderFilter').value;
  const age = document.getElementById('ageFilter').value;
  
  const cards = document.querySelectorAll('.pet-card');
  
  cards.forEach(card => {
    let show = true;
    
    // ‡∏ï‡∏£‡∏ß‡∏à‡∏™‡∏≠‡∏ö type
    if (type && card.getAttribute('data-type') !== type) {
      show = false;
    }
    
    // ‡∏ï‡∏£‡∏ß‡∏à‡∏™‡∏≠‡∏ö gender
    if (gender && card.getAttribute('data-gender') !== gender) {
      show = false;
    }
    
    // ‡∏ï‡∏£‡∏ß‡∏à‡∏™‡∏≠‡∏ö age
    if (age && card.getAttribute('data-age') !== age) {
      show = false;
    }
    
    if (show) {
      card.style.display = 'block';
    } else {
      card.style.display = 'none';
    }
  });
}

// ‡πÉ‡∏´‡πâ dropdown ‡πÄ‡∏õ‡∏•‡∏µ‡πà‡∏¢‡∏ô‡πÅ‡∏õ‡∏•‡∏á‡∏ó‡∏±‡∏ô‡∏ó‡∏µ
document.querySelectorAll('.filter-select').forEach(select => {
  select.addEventListener('change', filterPets);
});

// Favorite function
function toggleFavorite(element, petId, petName, petGender, petAge) {
  let favorites = JSON.parse(localStorage.getItem('favorites') || '[]');
  const petData = { id: petId, name: petName, gender: petGender, age: petAge };
  
  const exists = favorites.find(pet => pet.id === petId);
  
  if (exists) {
    // Remove from favorites
    favorites = favorites.filter(pet => pet.id !== petId);
    element.textContent = 'ü§ç';
  } else {
    // Add to favorites
    favorites.push(petData);
    element.textContent = '‚ù§Ô∏è';
  }
  
  localStorage.setItem('favorites', JSON.stringify(favorites));
}

// Load favorites on page load
window.addEventListener('load', function() {
  const favorites = JSON.parse(localStorage.getItem('favorites') || '[]');
  const cards = document.querySelectorAll('.pet-card');
  
  cards.forEach(card => {
    const heartIcon = card.querySelector('.heart-icon');
    const petId = card.getAttribute('data-petid');
    
    if (favorites.find(pet => pet.id === petId)) {
      heartIcon.textContent = '‚ù§Ô∏è';
    }
  });
});

