    document.querySelectorAll('.heart-icon,button[onclick*="toggleFavorite"]').forEach(btn => {
      if (btn.getAttribute('onclick')?.includes(petId) || btn.closest('.pet-card')?.getAttribute('data-petid') === petId) {
        btn.textContent = data.favorited ? '‚ù§Ô∏è' : 'ü§ç';
      }
    });
  }
}

// Load favorites on page load
window.addEventListener('load', function() {
  const favorites = JSON.parse(document.getElementById('favoriteIdsData')?.textContent || '[]');
  const cards = document.querySelectorAll('.pet-card');
  cards.forEach(card => {
    const heartIcon = card.querySelector('.heart-icon');
    const petId = card.getAttribute('data-petid');
    if (favorites.includes(petId)) {
      heartIcon.textContent = '‚ù§Ô∏è';
    }
