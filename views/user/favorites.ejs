<script>
// Toggle favorite (remove from favorites)
async function toggleFavorite(element, petId) {
  const body = new URLSearchParams({ petId });
  const response = await fetch('/favorites/toggle', {
    method: 'POST',
    headers: { 'Content-Type': 'application/x-www-form-urlencoded' },
    body
  });
  const data = await response.json();
  if (data && data.success && !data.favorited) {
    const card = element.closest('.favorite-item');
    if (card) card.remove();
    const remaining = document.querySelectorAll('.favorite-item');
    if (remaining.length === 0) {
      document.getElementById('no-favorites').style.display = 'block';
    }
  }
}

// Increment view count when modal opens
document.querySelectorAll('.pet-modal').forEach((modalEl) => {
  modalEl.addEventListener('shown.bs.modal', async () => {
    const petId = modalEl.getAttribute('data-petid');
    if (!petId) return;
    try {
      await fetch(`/pets/${petId}/view`, { method: 'POST' });
    } catch (err) {
      // ignore
    }
  });
});
</script>

<script>
function formatNotificationType(type) {
  if (type === 'favorite_adopted') return '‡∏™‡∏±‡∏ï‡∏ß‡πå‡πÉ‡∏ô‡∏£‡∏≤‡∏¢‡∏Å‡∏≤‡∏£‡πÇ‡∏õ‡∏£‡∏î‡∏ñ‡∏π‡∏Å‡∏£‡∏±‡∏ö‡πÄ‡∏•‡∏µ‡πâ‡∏¢‡∏á';
  if (type === 'new_pet_match') return '‡∏°‡∏µ‡∏™‡∏±‡∏ï‡∏ß‡πå‡πÉ‡∏´‡∏°‡πà‡∏ï‡∏£‡∏á‡∏Å‡∏±‡∏ö‡∏Ñ‡∏ß‡∏≤‡∏°‡∏™‡∏ô‡πÉ‡∏à';
  return '‡∏Å‡∏≤‡∏£‡πÅ‡∏à‡πâ‡∏á‡πÄ‡∏ï‡∏∑‡∏≠‡∏ô';
}

async function loadNotifications(panelEl) {
  try {
    const response = await fetch('/notifications/latest');
    const data = await response.json();
    if (!data || !data.success) return;

    const items = data.notifications || [];
    if (items.length === 0) {
      panelEl.innerHTML = '<div class="notification-empty">‡∏¢‡∏±‡∏á‡πÑ‡∏°‡πà‡∏°‡∏µ‡∏Å‡∏≤‡∏£‡πÅ‡∏à‡πâ‡∏á‡πÄ‡∏ï‡∏∑‡∏≠‡∏ô</div>';
      return;
    }
    panelEl.innerHTML = items.map(item => `
      <a class="notification-item ${item.isRead ? '' : 'notification-unread'}" href="/pet/${item.petId}?notificationId=${item.id}">
        <div>${item.message}</div>
        <small class="text-muted">${formatNotificationType(item.type)} ‚Ä¢ ${new Date(item.createdAt).toLocaleString('th-TH')}</small>
      </a>
    `).join('');
  } catch (err) {
    // ignore
  }
}

(function initNotifications() {
  const countEl = document.getElementById('notificationCount');
  const panelEl = document.getElementById('notificationPanel');
  const bellButton = document.getElementById('bellButton');
  if (!countEl) return;

  if (bellButton && panelEl) {
    bellButton.addEventListener('click', (event) => {
      event.preventDefault();
      panelEl.classList.toggle('show');
      if (panelEl.classList.contains('show')) {
        loadNotifications(panelEl);
      }
    });
    document.addEventListener('click', (event) => {
      if (!panelEl.contains(event.target) && !bellButton.contains(event.target)) {
        panelEl.classList.remove('show');
      }
    });
  }

  const source = new EventSource('/notifications/stream');
  source.addEventListener('message', (event) => {
    try {
      const data = JSON.parse(event.data || '{}');
      const count = Number(data.unreadCount || 0);
      countEl.textContent = count > 99 ? '99+' : String(count);
      countEl.style.display = count > 0 ? 'inline-flex' : 'none';
    } catch (err) {
      // ignore
    }
  });
})();
</script>

